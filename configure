$CC -o $TESTP $TESTC 1> /dev/null 2> /dev/null
if [ -x $TESTP ]; then
  has_inet_aton=yes
else
  $CC -o $TESTP $TESTC -lresolv 1> /dev/null 2> /dev/null
  if [ -x $TESTP ]; then
    has_inet_aton=-lresolv
    libresolv=-lresolv
  fi
